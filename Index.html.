<body>

    <div id="header">Scam.com</div>

    <div id="content">
        <h2>Enter your email to continue:</h2>
        <input type="email" id="email" placeholder="your@email.com">
        <button onclick="startPrank()">Submit</button>
    </div>

    <div id="crashScreen">
        <h1>:(</h1>
        <p>Your system has encountered a fatal error.</p>
        <p>Error Code: 0x000000DEAD</p>
        <p>Restarting in: NEVER</p>
    </div>

    <script>
        function startPrank() {
            let email = document.getElementById("email").value;
            if (email.trim() === "") {
                alert("Please enter a valid email.");
                return;
            }

            document.body.innerHTML = ""; // Clears the page for effect
            prankUser();
        }

        function prankUser() {
            let messages = [
                "Downloading virus... Please wait...",
                "Your IP address has been logged.",
                "Hacking in progress...",
                "System breach detected!"
            ];

            let index = 0;

            function showNextMessage() {
                if (index < messages.length) {
                    alert(messages[index]);
                    index++;
                    setTimeout(showNextMessage, 1000); // Show next pop-up after 1 second
                } else {
                    crashWebsite();
                }
            }

            showNextMessage();
        }

        function crashWebsite() {
            document.body.innerHTML = ''; // Wipe everything
            let crashScreen = document.getElementById("crashScreen");
            crashScreen.style.display = "block"; // Show fake error screen
            document.body.appendChild(crashScreen);

            // Freeze interaction
            document.onkeydown = document.onmousedown = document.onmousemove = function() {
                return false;
            };
        }
    </script>

